<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Create a new Campground
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Camp Name">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="price" placeholder="Price" min="100" step="100">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="description" required>Description</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>				
			</form>
			<a href="/campgrounds">
				Go Back!
			</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>