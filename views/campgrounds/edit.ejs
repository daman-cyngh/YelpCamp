<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Edit <%=campground.name%>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value="<%=campground.name%>">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="campground[price]" value="<%=campground.price%>" min="100" step="100">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[image]" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]"><%=campground.description%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>				
			</form>
			<a href="/campgrounds/<%=campground._id%>">
				Go Back!
			</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>